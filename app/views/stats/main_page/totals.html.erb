<%= turbo_frame_tag 'total_count' do %>
  <div class="card">
    <div class="card-body">
      <div class="card-title d-flex align-items-start justify-content-between">
        <div class="avatar flex-shrink-0">
          <img
            src=<%= image_url('icons/unicons/chart-success.png')%>
            alt="chart success"
            class="rounded"
          />
        </div>
        <div class="dropdown">
          <button
            class="btn p-0"
            type="button"
            id="cardOpt3"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <i class="bx bx-dots-vertical-rounded"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
          </div>
        </div>
      </div>
      <span class="fw-semibold d-block mb-1">Всего квартир</span>
      <h3 class="card-title mb-2"><%= @totals[:total] %></h3>
      <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> <%= @totals[:percent] %>%</small>
    </div>
  </div>
<% end %>


