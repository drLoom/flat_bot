
<% @charts.each do |chart, options| %>
  <div class="row">
    <div class="col-lg-12 mb-4 order-0">
      <div class="card">
        <div class="d-flex align-items-end row">
          <div class="card-body">
            <div data-controller="<%= chart %>" data-<%= options[:controller]%>-url-value="<%= options[:url]%>"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
